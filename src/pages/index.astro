---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Celebrating Love">
  <!-- Hero Section -->
  <section class="hero scroll-animate">
    <h1>Celebrating Love</h1>
    <p>Wishing you joy, laughter, and endless love as you begin this new chapter together.</p>
  </section>

  <!-- Word Cloud Section -->
  <section class="wordcloud scroll-animate">
    <span>Congratulations!</span>
    <span>Best Wishes</span>
    <span>Lots of Love</span>
    <span>Forever Happiness</span>
    <span>Cheers to You</span>
  </section>

  <!-- Navigation -->
  <section class="buttons scroll-animate">
    <button onclick="window.location.href='/message'">View Messages</button>
  </section>
</Layout>